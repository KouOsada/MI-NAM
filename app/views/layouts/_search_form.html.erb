<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :word, placeholder: "  ユーザーや投稿を検索", class: "form-control" %>
    <div class="text-right">
      <%= f.select :range, options_for_select([['ユーザー','User'], ['投稿', 'Post']]) %>
      <%= f.select :search, options_for_select([["完全一致", "perfect"], ["部分一致", "partial"]]) %>
      <%= button_tag type: "submit", class: "btn btn-outline-secondary" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>
<% else %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :word, placeholder: "  投稿を検索", class: "form-control" %>
    <%= f.hidden_field :range, :value => "Post" %>
    <div class="text-right">
      <%= f.select :search, options_for_select([["完全一致", "perfect"], ["部分一致", "partial"]]) %>
      <%= button_tag type: "submit", class: "btn btn-outline-secondary" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>
<% end %>