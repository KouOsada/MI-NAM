<div class="flash"><%= flash[:notice] %></div>
<div class="container my-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="my-5">投稿一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>投稿者</th>
            <th>いいね</th>
            <th>コメント</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= attachment_image_tag post, :post_image, size: "80x80", fallback: "no_image.png" %>
              </td>
              <td>
                <%= link_to admin_post_path(post.id) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <td>
                <%= link_to admin_user_path(post.user.id) do %>
                  <%= post.user.nickname %>
                <% end %>
              </td>
              <td class="heart_red ml-2"><i class="far fa-heart ml-2"></i><%= post.favorites.count %></td>
              <td><i class="far fa-comment ml-2"></i> <%= post.comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>