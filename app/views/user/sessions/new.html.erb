<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>ログイン</h2>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_field" %>
        </div>
      
        <div class="form-group">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "input_field" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="btn-wrapper">
          <%= link_to "新規登録", new_user_registration_path, class: "btn btn-secondary" %>
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



