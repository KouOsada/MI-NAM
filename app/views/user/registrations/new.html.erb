<div class="container my-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="mb-4flash"><%= flash[:notice] %></div>
      <h2 class="mb-3">会員登録</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>
      
        <div class="form-group">
          <%= f.label "ニックネーム" %><br />
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        
        <div class="mt-2">
          <%= f.label :profile_image, "プロフィール画像", class: "input-btn" %><br />
          <%= f.attachment_field :profile_image, class: "d-none" %>
        </div>
        
        <div class="form-group">
          <%= f.label "プロフィール紹介" %><br />
          <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "form-control" %>
        </div>
        
        <div class="form-group">
        <%= f.label "年齢" %><br />
        <%= f.select :age, User.ages.keys.map {|k| [I18n.t("enums.user.age.#{k}"), k]} %>
        </div>
        
        <div class="form-group">
          <%= f.label "肌タイプ" %><br />
          <%= f.select :skin_type, User.skin_types.keys.map {|k| [I18n.t("enums.user.skin_type.#{k}"), k]} %>
        </div>
      
        <div class="form-group">
          <%= f.submit "登録", class: "btn btn-outline-info btn-block rounded-pill" %>
        </div>
      <% end %>
      
      <p class="mt-4">
        会員登録がお済みの方は
        <%= link_to "こちら", new_user_session_path %>
      </p>
    </div>
  </div>
</div>