<table class="table mb-4">
  <tr>
    <th>
      <!--ログイン者がユーザーの場合：画像リンク。管理者の場合は表示のみ。-->
      <% if user_signed_in? %>
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag(user, :profile_image, size: "100x100", fallback: "no_image.png", class: "profile_image") %>
        <% end %>
      <% else %>
        <%= attachment_image_tag(user, :profile_image, size: "100x100", fallback: "no_image.png", class: "profile_image") %>
      <% end %>
    </th>
    <th></th>
    <th>
      <% if user == current_user %>
        <%= link_to "編集", edit_user_path(user.id), class: "btn btn-info rounded-pill pull-right" %>
      <% else %>
        <!--フォロー中orフォロー＋を表示-->
      <% end %>
    </th>
  </tr>
</table>

<table class="table">
  <tr>
    <td class="font-weight-bold"><%= user.nickname %></td>
    <td><%= user.age_i18n %></td>
    <td><%= user.skin_type_i18n %></td>
  </tr>
  <tr>
    <td colspan="3"><%= user.introduction %></td>
  </tr>
  <tr>
    <td colspan="2"></td>
    <td>フォロー中</td>
  </tr>
  <tr>
    <td colspan="2"></td>
    <td>フォロワー</td>
  </tr>
</table>