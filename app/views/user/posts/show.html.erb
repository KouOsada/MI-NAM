<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="flash"><%= flash[:notice] %></div>
    <div class="col-md-4 mt-5">
      <%= render 'user/users/info', user: @post.user %>
    </div>
    <div class="col-md-7 offset-md-1 mt-5 post-show">
      <h2 class="mb-5"><%= @post.user.nickname %>さんの投稿</h2>
      <div class="text-center mt-4">
        <%= attachment_image_tag @post, :post_image, size: "300x300", class: "post-show-img" %>
      </div>
      <div class="text-right mt-3">
        <% if @post.user == current_user %>
          <%= link_to edit_post_path(@post.id) do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% else %>
          <%= link_to user_path(@post.user) do %>
            <i class="far fa-user"></i> <%= @post.user.nickname %>さんの詳細
          <% end %>
        <% end %>
      </div>
      <div class="page-header mt-4">
        <h2 class="post-title"><%= @post.title %></h2>
        <div class="row">
          <p>ジャンル：　<%= @post.genre.name %></p>
          <div id="post_favorites_<%= @post.id %>" class="ml-5">
            <%= render "user/favorites/favorite-btn", post: @post %>
          </div>
        </div>
      </div>
      <div>
        <p>
          <%= @display_body %><br>
          <% if @hashtags.present? %>
            <% @hashtags.each do |hashtag| %>
              <%= link_to "##{hashtag.name}", hashtag_path(hashtag.id) %>
            <% end %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>