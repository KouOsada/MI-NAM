<div class="row">
  <% posts.each do |post| %>
    <div class="card m-3">
      <%= link_to post_path(post.id) do %>
        <%= attachment_image_tag(post, :post_image) %>
      <% end %>
      <div class="card-body">
        <%= link_to post_path(post.id) do %>
          <%= post.title %>
        <% end %>
        <div id="post_favorites_<%= post.id %>" class="mt-2">
          <%= render "user/favorites/favorite-btn", post: post %>
        </div>
        <!--ここにコメントカウント-->
      </div>
    </div>
  <% end %>
</div>
